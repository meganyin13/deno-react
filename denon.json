{
  "$schema": "https://deno.land/x/denon/schema.json",
  "watcher": {
    "exts": [
      "js",
      "ts",
      "json",
      "tsx",
      "jsx",
      "css",
      "html"
    ]
  },
  "scripts": {
    "start": {
      "cmd": "deno run server/staticServer.ts",
      "desc": "Run the main server",
      "allow": [
        "read",
        "net"
      ]
    }
  },
  "logger": {
    "fullscreen": true,
    "quiet": true,
    "debug": true
  }
}